<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/mywork_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@drawable/aquaphor_posters" />




        <TextView
            android:id="@+id/title_portfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Медицинский центр XXI век"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/hashtag_portfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="август 2012 — июнь 2014"
            android:textColor="#999"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#eee" />


        <TextView
            android:id="@+id/description_portfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tryString"

            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>